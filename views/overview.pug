extends base

block content
  main.main
    .card-container
      each questionSet in questionSets
        .card
            .card__header
              .card__picture
                .card__picture-overlay &nbsp;
                img.card__picture-img(src=``, alt=`${questionSet.name}`)
              h3.heading-tertirary
                span= questionSet.name
            
            .card__footer
              p
                span.card__footer-value='Creator'
                | 
                span.card__footer-text=`${questionSet.user.name}`
              p.card__ratings
                span.card__footer-value=`${questionSet.questions.length}`
                | 
                span.card__footer-text= `questions`
              a.btn.btn--green.btn--small(href=`/questionsetDetail?_id=${questionSet._id}`) View All  
             
      
      
